<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <title>Event Details</title>
    <style>
        body {
            background-color: #f8f9fa;
        }

        .container {
            max-width: 1200px;
            margin-top: 50px;
        }

        h2 {
            color: #007bff;
        }

        .event-card {
            margin-top: 20px;
            height: 400px;
            border: 1px solid #ddd;
            border-radius: 15px;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
            transition: box-shadow 0.3s ease;
            overflow: hidden;
        }

        .event-card:hover {
            box-shadow: 0 12px 24px rgba(0, 0, 0, 0.2);
        }

        .card-img-top {
            height: 60%;
            object-fit: cover;
            border-top-left-radius: 15px;
            border-top-right-radius: 15px;
        }

        .card-body {
            height: 40%;
            padding: 15px;
            background-color: #fff;
        }

        .card-title {
            font-size: 2rem;
            margin-bottom: 10px;
            color: #333;
        }

        .card-text {
            color: #555;
            margin-bottom: 15px;
        }

        .btn-primary {
            align-self: flex-end;
            background-color: #007bff;
            border-color: #007bff;
        }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #0056b3;
        }

        .event-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }

        .add-event-btn {
            background-color: #28a745;
            border-color: #28a745;
            color: #fff;
            width: 45px;
            height: 45px;
            font-size: 2rem;
            display: flex;
            align-items: center;
            justify-content: center;
            text-decoration: none;
            border-radius: 50%;
            transition: background-color 0.3s ease;
        }

        .add-event-btn:hover {
            background-color: #218838;
            border-color: #1e7e34;
        }
    </style>
</head>

<body>
    <div class="container">
        <div class="event-header">
            <h2>Event Details</h2>
            <a href="/create-event" class="btn btn-success add-event-btn">+</a>
        </div>
       
        <% for (let i = 0; i < eventData.length; i += 2) { %>
            <div class="row">
                <% for (let j = i; j < Math.min(i + 2, eventData.length); j++) { %>
                    <div class="col-md-6">
                        <div class="card event-card">
                            <img src="/uploads/<%= eventData[j].eventImage %>" class="card-img-top" alt="Event Image">
                            <div class="card-body">
                                <h5 class="card-title"><%= eventData[j].eventName %></h5>
                                <p class="card-text">
                                    <strong>Description:</strong> <%= eventData[j].eventDescription %><br>
                                    <strong>Total Tickets:</strong> <%= eventData[j].totalTickets %><br>
                                </p>
                                <a href="/discover/<%= eventData[j]._id %>" class="btn btn-primary">View</a>
                            </div>
                        </div>
                    </div>
                <% } %>
            </div>
        <% } %>
        
        <div class="mt-4">
            <a href="/home" class="btn btn-secondary">Home</a>
        </div>
    </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>

</html>
